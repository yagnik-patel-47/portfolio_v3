---
import Layout from "../layouts/Layout.astro";
import projects from "../workData.js";
---

<Layout pageTitle="Works" pageName="works">
  <section
    class="flex flex-col mt-10 py-10 px-8 md:px-24 lg:px-40 xl:px-60 2xl:px-80 mb-60"
  >
    <h1 class="text-5xl lg:text-7xl leading-tight lg:font-medium">
      All of my work
    </h1>
    <div class="grid lg:grid-cols-2 gap-x-6 gap-y-16 mt-24">
      {
        projects.map((project) => (
          <div class="flex flex-col space-y-1 work_cards relative">
            <a
              class="relative inline-block group"
              target="_blank"
              aria-label="Demo link"
              href={project.demoLink}
            >
              <div class="inset-0 scale-110 opacity-0 transition duration-500 group-hover:opacity-50 dark:group-hover:opacity-30 absolute -z-10 h-full w-full">
                <img
                  class="blur-md h-full w-full object-fill"
                  src={project.image}
                  alt={project.title}
                />
              </div>
              <img
                class="w-full h-auto object-cover aspect-video object-bottom rounded-sm cursor-pointer"
                width="600px"
                height="550px"
                src={project.image}
                alt={project.title}
              />
            </a>
            <div class="flex flex-col space-y-3">
              <div class="flex justify-between items-center !mt-4">
                <h3 class="font-medium text-xl tracking-wider">
                  {project.title}
                </h3>
                <div class="flex space-x-2 items-center">
                  <a
                    class="hover:text-blue-500"
                    href={project.repoLink}
                    target="_blank"
                    rel="noreferrer"
                    aria-label="github repo"
                  >
                    <svg
                      class="w-6 h-6 cursor-pointer"
                      stroke="currentColor"
                      fill="currentColor"
                      stroke-width="0"
                      viewBox="0 0 1024 1024"
                      height="1em"
                      width="1em"
                      xmlns="http://www.w3.org/2000/svg"
                      data-darkreader-inline-fill=""
                      data-darkreader-inline-stroke=""
                      style="--darkreader-inline-fill:currentColor; --darkreader-inline-stroke:currentColor;"
                    >
                      <path d="M511.6 76.3C264.3 76.2 64 276.4 64 523.5 64 718.9 189.3 885 363.8 946c23.5 5.9 19.9-10.8 19.9-22.2v-77.5c-135.7 15.9-141.2-73.9-150.3-88.9C215 726 171.5 718 184.5 703c30.9-15.9 62.4 4 98.9 57.9 26.4 39.1 77.9 32.5 104 26 5.7-23.5 17.9-44.5 34.7-60.8-140.6-25.2-199.2-111-199.2-213 0-49.5 16.3-95 48.3-131.7-20.4-60.5 1.9-112.3 4.9-120 58.1-5.2 118.5 41.6 123.2 45.3 33-8.9 70.7-13.6 112.9-13.6 42.4 0 80.2 4.9 113.5 13.9 11.3-8.6 67.3-48.8 121.3-43.9 2.9 7.7 24.7 58.3 5.5 118 32.4 36.8 48.9 82.7 48.9 132.3 0 102.2-59 188.1-200 212.9a127.5 127.5 0 0 1 38.1 91v112.5c.8 9 0 17.9 15 17.9 177.1-59.7 304.6-227 304.6-424.1 0-247.2-200.4-447.3-447.5-447.3z" />
                    </svg>
                  </a>
                  <a
                    class="hover:text-blue-500"
                    href={project.demoLink}
                    target="_blank"
                    rel="noreferrer"
                    aria-label="demo"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-6 h-6"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                      />
                    </svg>
                  </a>
                </div>
              </div>
              <p class="text-white-secondary">{project.description}</p>
              <div class="flex flex-wrap gap-2">
                {project.keywords.map((keyword) => (
                  <span class="px-2 py-1 text-xs md:text-sm bg-[#d8e6ef] dark:bg-[#232628] rounded-lg">
                    {keyword}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</Layout>

<script is:inline>
  const allWorkCards = document.querySelectorAll(".work_cards");
  window.addEventListener("load", () => {
    allWorkCards.forEach((card) => {
      const bound = card.getBoundingClientRect();
      if (bound.y < window.innerHeight && bound.y > 0) {
        card.childNodes[1].childNodes[3].animate(
          {
            objectPosition: `0% ${(bound.y / window.innerHeight) * 100}%`,
          },
          { duration: 200, fill: "forwards" }
        );
      }
    });
  });

  window.addEventListener("scroll", () => {
    allWorkCards.forEach((card) => {
      const bound = card.getBoundingClientRect();
      if (bound.y < window.innerHeight && bound.y > 0) {
        card.childNodes[1].childNodes[3].animate(
          {
            objectPosition: `0% ${(bound.y / window.innerHeight) * 100}%`,
          },
          { duration: 300, fill: "forwards" }
        );
      }
    });
  });
</script>
